extends layout

block content
  div.login_wrapper
    div.login_inner
      h1.something= title
      form(action="/").form_login
        div
          label(for="username") Username
          input(type="text", name="username", placeholder="Your name")#username
        div
          label(for="password") Password
          input(type="password", name="password", placeholder="Your password")#password
        div
          input(type="submit", value="Log In").button.button-primary
